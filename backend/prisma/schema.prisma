// Define the SQLite database provider
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Define a model for QR code scans
model Scan {
  id         Int      @id @default(autoincrement()) // Primary key
  deviceType String   // Stores either "iPhone" or "Android"
  timestamp  DateTime @default(now())               // Stores the timestamp of the scan
}
